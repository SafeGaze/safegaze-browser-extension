{
  "manifest_version": 3,
  "name": "SafeGaze Browser Extension",
  "version": "1.0.0",
  "description": "SafeGaze detects and masks potentially haram & sensitive contents in your browser.",
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "settings/popup.html",
    "default_icon": {
      "16": "images/safegaze-icon.png",
      "32": "images/safegaze-icon.png",
      "48": "images/safegaze-icon.png",
      "128": "images/safegaze-icon.png"
    }
  },
  "icons": {
    "16": "images/safegaze-icon.png",
    "32": "images/safegaze-icon.png",
    "48": "images/safegaze-icon.png",
    "128": "images/safegaze-icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "css": ["content/style.css"],
      "run_at": "document_end"
    }
  ]
}
